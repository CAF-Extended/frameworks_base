<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/ambient_indication"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:forceHasOverlappingRendering="false"
    android:layout_marginBottom="71.0dip"
    android:layout_marginEnd="41.0dip"
    android:gravity="center" 
    android:layout_marginStart="41.0dip"
    android:orientation="vertical"
    android:visibility="invisible"    
    android:paddingTop="8.0dip">

    <ImageView
        android:id="@+id/ambient_indication_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:src="@drawable/ic_music_note_24dp"
        android:tint="?wallpaperTextColorSecondary"
        android:tintMode="src_in"
        android:forceHasOverlappingRendering="false" />


    <TextView
        android:id="@id/ambient_indication_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"      
        android:forceHasOverlappingRendering="false"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:letterSpacing="0.02"
        android:paddingBottom="15.0sp"
        android:paddingLeft="15.0sp"
        android:paddingRight="15.0sp"
        android:paddingTop="15.0sp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.Keyguard.BottomArea"
        android:textSize="14.0sp"/>

</LinearLayout>
